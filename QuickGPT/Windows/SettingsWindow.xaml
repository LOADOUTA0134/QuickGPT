<Window x:Class="QuickGPT.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickGPT.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="500" Width="800"
        Background="#383838" Foreground="White"
        FontFamily="Cascadia Mono" FontSize="16">
    <StackPanel>
        <Label Content="OpenAI API Key"
               Foreground="White"
               Margin="10 10 10 0"/>
        <TextBox x:Name="TextBoxOpenAiApiKey"
                 Background="#545454"
                 Foreground="White"
                 VerticalAlignment="Center"
                 Margin="10 0 10 10"
                 Padding="5"
                 BorderThickness="0"/>

        <Label Content="OpenAI API URL"
               Foreground="White"
               Margin="10 10 10 0"/>
        <TextBox x:Name="TextBoxOpenAiApiUrl"
                 Background="#545454"
                 Foreground="White"
                 VerticalAlignment="Center"
                 Margin="10 0 10 10"
                 Padding="5"
                 BorderThickness="0"/>


        <Label Content="OpenAI Model"
               Foreground="White"
               Margin="10 10 10 0"/>
        <TextBox x:Name="TextBoxOpenAiModel"
                 Background="#545454"
                 Foreground="White"
                 VerticalAlignment="Center"
                 Margin="10 0 10 10"
                 Padding="5"
                 BorderThickness="0"/>


        <Label Content="System Message"
               Foreground="White"
               Margin="10 10 10 0"/>
        <TextBox x:Name="TextBoxSystemMessage"
                 Background="#545454"
                 Foreground="White"
                 VerticalAlignment="Center"
                 Margin="10 0 10 10"
                 Padding="5"
                 BorderThickness="0"/>


        <Label Content="Update Interval"
               Foreground="White"
               Margin="10 10 10 0"/>
        <TextBox x:Name="TextBoxUpdateInterval"
                 Background="#545454"
                 Foreground="White"
                 VerticalAlignment="Center"
                 Margin="10 0 10 10"
                 Padding="5"
                 BorderThickness="0"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Save Changes"
                    Margin="10"
                    Width="200"
                    Height="30"
                    Background="#545454"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Button_Click_Save"/>

            <Button Content="Reset Settings"
                    Margin="10"
                    Width="180"
                    Height="30"
                    Background="#6d3636"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Button_Click_Reset"/>
        </StackPanel>
    </StackPanel>
</Window>
