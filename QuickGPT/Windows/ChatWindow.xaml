<Window x:Class="QuickGPT.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickGPT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChatWindow" Height="800" Width="1200"
        Background="#383838" Foreground="White"
        FontFamily="Cascadia Mono" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Padding="10">
            <StackPanel x:Name="MessagesStackPanel"/>
        </ScrollViewer>

        <TextBox x:Name="MessageTextBox"
                 Grid.Row="1"
                 Margin="10"
                 Padding="7"
                 VerticalAlignment="Center"
                 BorderThickness="0"
                 Background="Gray"
                 Foreground="White"
                 KeyDown="MessageTextBox_KeyDown"/>
    </Grid>
</Window>
