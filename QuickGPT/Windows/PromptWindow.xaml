<Window x:Class="QuickGPT.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickGPT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#545454"
        Title="PromptWindow" Height="50" Width="600"
        LostKeyboardFocus="Window_LostKeyboardFocus">
    <Grid>
        <TextBox x:Name="TextBoxPrompt"
                 FontFamily="Cascadia Mono"
                 FontSize="20"
                 Background="#545454"
                 Foreground="White"
                 VerticalAlignment="Center"
                 Padding="10"
                 BorderThickness="0"
                 KeyDown="TextBoxPrompt_KeyDown"/>
    </Grid>
</Window>
